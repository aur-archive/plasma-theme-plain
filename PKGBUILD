pkgname=plasma-theme-plain
pkgver=0.6
pkgrel=1
pkgdesc="A very basic and minimalistic theme."
arch=('i686')
url="http://www.kde-look.org/content/show.php/Plain?content=83174"
license=('GPL')
depends=('kdebase')
source=(http://www.kde-look.org/CONTENT/content-files/83174-plain_06.tar.gz)
md5sums=('b73d2018c3b44fb31233660bf4194fec')

build() {

mkdir -p $startdir/pkg/usr/share/apps/desktoptheme
cd $startdir/src
cp -r plain $startdir/pkg/usr/share/apps/desktoptheme/

}
